---
import docker from "@/lib/docker";

const containerList = await docker.getContainerList()
---
<div class="overflow-x-auto">
  <table class="table table-sm">
    <!-- head -->
    <thead>
      <tr>
        <th>Name</th>
        <th>State</th>
        <th>Ports</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
      {containerList.map(container => (
        <tr>
          <td>
            <a class="link" href={`/container/${container.Names[0].replace(/\//, '')}`}>
              {container.Names[0].replace(/\//, '')}
            </a>
          </td>
          <td>{container.State}</td>
          <td>{
            container.Ports
              .filter(item => item.Type === "tcp" && item.PublicPort)
              .map(port => `${port.PrivatePort}:${port.PublicPort}`)
              .reduce((acc, val) => {
                if (acc.includes(val)) return acc

                return [...acc, val]
              }, [] as string[])
              .join(' ')
            }
          </td>
          <td><span class="break-all">{container.Image}</span></td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
