---
import docker from "@/lib/docker";

const containerList = await docker.getContainerList()
---
<div class="overflow-x-auto">
  <table class="table">
    <!-- head -->
    <thead>
      <tr>
        <th>Name</th>
        <th>State</th>
        <th>Ports</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
      {containerList.map(container => (
        <tr>
          <td>{container.Names[0].replace(/\//, '')}</td>
          <td>{container.State}</td>
          <td>{container.Ports.map(port => `${port.Type} ${port.PublicPort}:${port.PrivatePort}`)}</td>
          <td>{container.Image}</td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
